<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head'); %>
</head>

<body class="container">

  <% let msg=(!message.length==0) %>

  <% if (msg) { %>
    <% if(message[0]=='success' ) { %>
      <div class="alert my-alert">
        Product Added Successfully!
      </div>
    <% } else if(message[0]=='failed') { %>
      <div class="alert my-alert my-alert-error">
        Failed to Add Product! Please try again.
      </div>
    <% } %>
  <% } %>

  <header class="main-header" <%=msg?'style=top:20px':'' %>>
    <div class="container">
      <%- include('../../partials/header'); %>
    </div>
  </header>

  <main>
    <div>
      <h1>Add new product page</h1>

      <section class="product-form-section">
        <form action="/api/products" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label for="inputProductName">Product Name</label>
            <input type="text" name="name" class="form-control" id="inputProductName" placeholder="Enter product name"
              required>
          </div>
          <div class="form-group">
            <label for="inputProductPrice">Product Price</label>
            <span class="addPrdctPriceInptSpan">â‚¹</span>
            <input type="number" name="price" step="0.01" min="0" class="form-control" id="inputProductPrice"
              placeholder="Product Price" required>
          </div>
          <div class="form-group">
            <label for="inputProductIngredients">Product Ingredients</label>
            <input type="text" name="ingredients" class="form-control" id="inputProductIngredients"
              placeholder="Product Ingredients" required>
          </div>
          <div class="form-group">
            <label for="inputProductIngredients">Add Product Images</label>
            <input type="file" name="images[]" accept="image/*" multiple class="form-control" id="inputProductImages" required >
            <div class="selected-imgs" id="add-prdct-slctd-imgs"></div>
          </div>
          <div class="form-check">
            <input type="checkbox" onchange="showOrHideSbmtBtn('checkboxAddProduct', 'addPrdctSbmtBtn')"
              class="form-check-input" id="checkboxAddProduct" required>
            <label class="form-check-label" for="checkboxAddProduct">Check me out</label>
          </div>
          <button type="submit" id="addPrdctSbmtBtn" disabled class="btn btn-primary">Add Product</button>
        </form>
      </section>
    </div>
  </main>

  <%- include('../../partials/footer'); %>