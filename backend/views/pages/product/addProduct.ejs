<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head'); %>
</head>

<body class="container">

  <header class="main-header">
    <div class="container">
      <%- include('../../partials/header'); %>
    </div>
  </header>

  <main>
    <div>
      <h1>Add new product page</h1>

      <section class="product-form-section">
        <form>
          <div class="form-group">
            <label for="inputProductName">Product Name</label>
            <input type="text" name="name" class="form-control" id="inputProductName" placeholder="Enter product name">
          </div>
          <div class="form-group">
            <label for="inputProductPrice">₹ Product Price</label>
            <input type="number" name="price" step="0.01" min="0" class="form-control" id="inputProductPrice"
              placeholder="₹ Product Price">
          </div>
          <div class="form-group">
            <label for="inputProductIngredients">Product Ingredients</label>
            <input type="text" name="ingredients" class="form-control" id="inputProductIngredients"
              placeholder="Product Ingredients">
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="checkProduct">
            <label class="form-check-label" for="checkProduct">Check me out</label>
          </div>
          <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
      </section>
    </div>
  </main>

  <%- include('../../partials/footer'); %>