<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head'); %>
</head>

<body class="container">

  <header class="main-header">
    <div class="container">
      <%- include('../../partials/header'); %>
    </div>
  </header>

  <main>
    <div>
      <h1>User Register page</h1>

      <section class="register-form-section">
        <form action="/api/user/register" method="POST">
          <div class="form-group">
            <label for="inputFullName">Full Name:</label>
            <input type="text" name="name" class="form-control" required id="inputFullName" placeholder="Full Name">
          </div>
          <div class="form-group">
            <label for="inputMobile">Mobile Number:</label>
            <span class="inputMobileSpan">+91</span>
            <input type="number" name="mobile_no" required class="form-control" id="inputMobile" placeholder="Mobile Number">
          </div>
          <div class="form-group">
            <label for="inputEmailReg">Email address</label>
            <input type="email" name="email" required class="form-control" id="inputEmailReg" aria-describedby="emailHelp"
              placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="inputPasswordReg">Password</label>
            <input type="password" name="password" required class="form-control" id="inputPasswordReg" placeholder="Password">
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="checkRegForm" onchange="registerOnChangeCheckInput()">
            <label class="form-check-label" for="checkRegForm">Check me out</label>
          </div>
          <button type="submit" id="register-sbmt-btn" class="btn btn-primary">Register</button>
        </form>
      </section>

    </div>
  </main>


  <%- include('../../partials/footer'); %>