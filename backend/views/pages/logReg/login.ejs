<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head'); %>
</head>

<body class="container">

  <header class="main-header">
    <div class="container">
      <%- include('../../partials/header'); %>
    </div>
  </header>

  <main>
    <div>
      <h1>User Login page</h1>

      <section class="login-form-section">
        <form action="/api/user/login" method="post">
          <div class="form-group">
            <label for="inputEmailLog">Email address</label>
            <input type="email" name="email" class="form-control" required id="inputEmailLog"
              aria-describedby="emailHelpLog" placeholder="Enter email">
            <small id="emailHelpLog" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="inputPasswordLog">Password</label>
            <input type="password" name="password" required class="form-control" id="inputPasswordLog"
              placeholder="Password">
          </div>
          <div class="form-check">
            <input type="checkbox" onchange="showOrHideSbmtBtn('checkMeOutLog', 'login-sbmt-btn')"
              class="form-check-input" id="checkMeOutLog">
            <label class="form-check-label" for="checkMeOutLog">Check me out</label>
          </div>
          <button type="submit" id="login-sbmt-btn" disabled class="btn btn-primary">Login</button>
        </form>
      </section>


    </div>
  </main>


  <%- include('../../partials/footer'); %>